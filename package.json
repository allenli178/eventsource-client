{
  "name": "eventsource-client",
  "version": "0.0.0",
  "description": "Modern EventSource client for browsers and Node.js",
  "sideEffects": false,
  "types": "./dist/default.d.ts",
  "source": "./src/default.ts",
  "module": "./dist/default.esm.js",
  "main": "./dist/default.js",
  "exports": {
    ".": {
      "types": "./dist/default.d.ts",
      "source": "./src/default.ts",
      "require": "./dist/default.js",
      "node": {
        "import": "./dist/node.cjs.mjs",
        "require": "./dist/node.js"
      },
      "import": "./dist/default.esm.js",
      "default": "./dist/default.esm.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pkg-utils build && pkg-utils --strict",
    "clean": "rimraf dist coverage",
    "lint": "eslint . && tsc --noEmit",
    "posttest": "npm run lint",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "ts-node test/node/client.node.test.ts",
    "test:browser": "ts-node test/browser/client.browser.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rexxars/eventsource-client.git"
  },
  "keywords": [
    "sse",
    "eventsource",
    "server-sent-events"
  ],
  "author": "Espen Hovlandsdal <espen@hovlandsdal.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.6.0"
  },
  "dependencies": {
    "destroy": "^1.2.0",
    "eventsource-parser": "^0.1.0"
  },
  "devDependencies": {
    "@sanity/pkg-utils": "^2.2.3",
    "@types/destroy": "^1.0.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.2",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "esbuild": "^0.17.11",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-sanity": "^5.1.0",
    "node-fetch": "^2.6.7",
    "playwright": "^1.31.2",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "undici": "^5.12.0"
  },
  "bugs": {
    "url": "https://github.com/rexxars/eventsource-client/issues"
  },
  "homepage": "https://github.com/rexxars/eventsource-client#readme",
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "extends": [
      "sanity",
      "sanity/typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "lib/**/"
    ],
    "globals": {
      "globalThis": false
    },
    "rules": {
      "no-undef": "off"
    }
  }
}
